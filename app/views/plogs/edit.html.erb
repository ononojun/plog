<div class="contents row">
  <%= form_tag("/plogs/#{@plog.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <input type="text" name="image" value="<%= @plog.image %>" placeholder="Image Url" autofocus="true">
    <textarea name="text" placeholder="text" rows="10" cols="30"><%= @plog.text %></textarea>
    <input type="submit" value="SENT">
  <% end %>
</div>