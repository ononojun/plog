<div class="contents row" >
  <% @plogs.each do |plog| %>
    <div class="content_post" style="background-image: url(<%= plog.image %>);">
      <% if user_signed_in? && current_user.id == plog.user_id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/plogs/#{plog.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/plogs/#{plog.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
      <%= simple_format(plog.text) %>
      <span class="name"><%= plog.name %></span>
    </div>
  <% end %>
</div>